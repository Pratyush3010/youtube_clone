<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    app:cardCornerRadius="20dp"

    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardcircular"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/headerbackgound" />

        <TextView
            android:id="@+id/cardtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/cardcircular"
            android:text="John Duo"
            android:textSize="12dp"

            android:textStyle="normal" />

        <ImageView
            android:id="@+id/cardusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/carduser" />

        <ImageView
            android:id="@+id/cardthreeedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/cardthreedot" />

        <ImageView
            android:id="@+id/cardpost"
            android:layout_width="fill_parent"
            android:layout_height="231dp"
            android:layout_below="@id/cardcircular"
            android:layout_marginTop="4dp"
            android:src="@drawable/cardimage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/playvideoicon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/playvideo_icon"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardpost"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_weight="1"
                android:src="@drawable/watsappicon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_weight="1"
                android:src="@drawable/shareicon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_weight="1"
                android:src="@drawable/likeicon" />

            <TextView
                android:id="@+id/liketext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-1dp"
                android:text="0"
                android:textColor="#C5C9D1"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_weight="1"
                android:src="@drawable/messageicon" />

            <TextView
                android:id="@+id/commenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-1dp"
                android:text="0"
                android:textColor="#C5C9D1"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="33dp"
                android:layout_weight="1"
                android:src="@drawable/downloadcard" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>